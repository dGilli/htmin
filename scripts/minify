#!/bin/bash

minify_html() {
    local input_file="$1"
    local output_file="$2"

    sed 's/<!--.*-->/ /g' "$input_file" |
    sed -e 's/[[:space:]]\+/ /g' -e 's/^[ \t]*//;s/[ \t]*$//' |
    tr -d '\n' > "$output_file"

    echo "Minified HTML saved to: $output_file"
}

if [ "$#" -ne 2 ]; then
    echo "Usage: $0 input.html output.html"
    exit 1
fi

minify_html "$1" "$2"

